---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>

<section class="rounded-2x1 relative bg-gradient-to-r from-blue-500 to-indigo-600 text-white py-20 px-6 md:px-12 lg:px-24 overflow-hidden">
  <!-- Decorative circles -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-white opacity-10 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-white opacity-5 rounded-full translate-x-1/2 translate-y-1/2"></div>

  <div class="relative max-w-4xl mx-auto text-center">
    <h1 class="text-3xl md:text-5xl font-extrabold mb-4 drop-shadow-lg">
      Welcome to FitTech Zone
    </h1>
    <p class="text-lg md:text-2xl mb-8 drop-shadow">
      Daily workouts, smart tech reviews, and expert insights — all in one place.
    </p>
    <a href="/blog/fitness" class="inline-block bg-white text-indigo-600 font-semibold py-3 px-6 rounded-full shadow-lg hover:shadow-xl transition">
      Start Your First Workout →
    </a>
  </div>
</section>

<section class="py-16 px-6 md:px-12 lg:px-24">
  <h2 class="text-2xl md:text-3xl font-bold text-center mb-10">Explore Our Sections</h2>
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Fitness Tutorials -->
    <a href="/blog/fitness" class="block bg-white rounded-2xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition p-6">
      
      <img 
  src="/images/icons/dumbbell.svg" 
  alt="Fitness Tutorials Icon" 
  class="w-16 h-16 mb-4 mx-auto transition-transform duration-300 group-hover:scale-110 group-hover:-translate-y-1 animate-pulse-slow"
/>

<h3 class="text-xl font-semibold text-center mb-2">Fitness Tutorials</h3>
      <p class="text-gray-600 text-center mb-4">Professional workout guides for all levels — from warm-ups to strength training.</p>
      <div class="text-center text-indigo-600 font-medium">View Tutorials &rarr;</div>
    </a>

    <!-- Tech Gear Reviews -->
    <a href="/blog/reviews" class="block bg-white rounded-2xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition p-6">
      <img src="/images/icons/watch.svg" alt="" class="w-12 h-12 mb-4 mx-auto" />
      <h3 class="text-xl font-semibold text-center mb-2">Tech Gear Reviews</h3>
      <p class="text-gray-600 text-center mb-4">Hands-on reviews of smartwatches, equipment & gadgets that keep you fit.</p>
      <div class="text-center text-indigo-600 font-medium">Read Reviews &rarr;</div>
    </a>

    <!-- Affiliate Deals -->
    <a href="/blog/deals" class="block bg-white rounded-2xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition p-6">
      <img src="/images/icons/tag.svg" alt="" class="w-12 h-12 mb-4 mx-auto" />
      <h3 class="text-xl font-semibold text-center mb-2">Affiliate Deals</h3>
      <p class="text-gray-600 text-center mb-4">Find the best fitness tech at the best prices — every tool comes with a purchase link.</p>
      <div class="text-center text-indigo-600 font-medium">Shop Deals &rarr;</div>
    </a>
  </div>
</section>

<section class="bg-indigo-50 py-16 px-6 md:px-12 lg:px-24 text-center">
  <h2 class="text-2xl md:text-3xl font-bold mb-4">Stay in the Loop</h2>
  <p class="text-gray-700 mb-6">Get tutorials, reviews & exclusive deals delivered straight to your inbox every week.</p>
  <!-- Replace with your actual form embed or component -->
  <form class="max-w-xl mx-auto flex flex-col sm:flex-row gap-4">
    <input 
      type="email" 
      placeholder="you@example.com" 
      class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400" />
    <button type="submit" class="bg-indigo-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-indigo-700 transition">
      Subscribe
    </button>
  </form>
</section>
                </main>
		<Footer />
	</body>
</html>
